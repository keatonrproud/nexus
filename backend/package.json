{
  "name": "nexus-backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev-build-local": "tsc",
    "dev-local": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "dev-build": "cd .. && docker build -t nexus .",
    "dev-docker": "cd .. && docker run -p 8080:8080 --env-file backend/.env nexus",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "migration:create": "ts-node scripts/create-migration.ts",
    "migration:run": "ts-node scripts/run-migrations.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
